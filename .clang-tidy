Checks: >
    -*,
    bugprone-*,
    cert-*,
    clang-analyzer-*,
    concurrency-*,
    cppcoreguidelines-*,
    hicpp-*,
    -hicpp-named-parameter,
    misc-*,
    modernize-*,
    performance-*,
    portability-*,
    readability-*,
    -readability-named-parameter,

WarningsAsErrors: "*"

CheckOptions:
    - { key: bugprone-argument-comment.StrictMode, value: 1 }
    - { key: misc-non-private-member-variables-in-classes.IgnoreClassesWithAllMemberVariablesBeingPublic, value: 1 }

FormatStyle: 'file'

